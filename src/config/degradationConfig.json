{
  "version": "0.7.0",
  "description": "Tier-based degradation system configuration (unified tiers 1-5 for both organs)",

  "organs": {
    "liver": {
      "organ": "liver",
      "description": "Liver degradation reduces container capacity",
      "maxTier": 5,
      "baseCapacity": 100,

      "tierThresholds": [
        { "tier": 1, "bufferMin": 0, "bufferMax": 24, "description": "Healthy (non-burnable)" },
        { "tier": 2, "bufferMin": 25, "bufferMax": 49 },
        { "tier": 3, "bufferMin": 50, "bufferMax": 74 },
        { "tier": 4, "bufferMin": 75, "bufferMax": 99 },
        { "tier": 5, "bufferMin": 100, "bufferMax": 999 }
      ],

      "tierEffects": [
        { "tier": 1, "capacityReduction": 0, "effectiveCapacity": 100 },
        { "tier": 2, "capacityReduction": 10, "effectiveCapacity": 90 },
        { "tier": 3, "capacityReduction": 20, "effectiveCapacity": 80 },
        { "tier": 4, "capacityReduction": 30, "effectiveCapacity": 70 },
        { "tier": 5, "capacityReduction": 40, "effectiveCapacity": 60 }
      ],

      "accumulation": {
        "description": "Liver degradation accumulates based on BG excess",
        "sources": [
          {
            "id": "bg_excess",
            "description": "Accumulation from BG exceeding thresholds",
            "condition": {
              "type": "container",
              "container": "bg",
              "operator": ">",
              "value": 200
            },
            "formula": "(bg - 200) * 1.5 coefficient in excessBG (zone 200-300)"
          }
        ]
      }
    },

    "pancreas": {
      "organ": "pancreas",
      "description": "Pancreas degradation reduces maximum muscle activation tier",
      "maxTier": 5,

      "tierThresholds": [
        { "tier": 1, "bufferMin": 0, "bufferMax": 24, "description": "Healthy (non-burnable)" },
        { "tier": 2, "bufferMin": 25, "bufferMax": 49 },
        { "tier": 3, "bufferMin": 50, "bufferMax": 74 },
        { "tier": 4, "bufferMin": 75, "bufferMax": 99 },
        { "tier": 5, "bufferMin": 100, "bufferMax": 999 }
      ],

      "tierEffects": [
        { "tier": 1, "maxTierReduction": 0, "effectiveMaxTier": 5 },
        { "tier": 2, "maxTierReduction": 1, "effectiveMaxTier": 4 },
        { "tier": 3, "maxTierReduction": 2, "effectiveMaxTier": 3 },
        { "tier": 4, "maxTierReduction": 3, "effectiveMaxTier": 2 },
        { "tier": 5, "maxTierReduction": 4, "effectiveMaxTier": 1 }
      ],

      "accumulation": {
        "description": "Pancreas degradation accumulates based on BG variability",
        "sources": [
          {
            "id": "bg_excess",
            "description": "Accumulation from prolonged high BG",
            "condition": {
              "type": "container",
              "container": "bg",
              "operator": ">",
              "value": 200
            },
            "formula": "(bg - 200) * 1.5 coefficient in excessBG (zone 200-300), shared with liver"
          },
          {
            "id": "bg_low",
            "description": "Accumulation from hypoglycemia",
            "condition": {
              "type": "container",
              "container": "bg",
              "operator": "<",
              "value": 70
            },
            "formula": "(70 - bg) * 0.1 per hour"
          }
        ]
      }
    }
  },

  "modifiers": {
    "metformin": {
      "description": "Metformin effect containers can block degradation accumulation",
      "thresholds": [
        {
          "threshold": 20,
          "effect": "Block Liver Degradation Tier 1",
          "blockedTier": 1
        },
        {
          "threshold": 40,
          "effect": "Block Liver Degradation Tier 2",
          "blockedTier": 2
        },
        {
          "threshold": 60,
          "effect": "Block Liver Degradation Tier 3",
          "blockedTier": 3
        },
        {
          "threshold": 80,
          "effect": "Block Liver Degradation Tier 4",
          "blockedTier": 4
        },
        {
          "threshold": 100,
          "effect": "Block Liver Degradation Tier 5",
          "blockedTier": 5
        }
      ]
    }
  },

  "degradationBuffer": {
    "description": "Degradation Buffer system for Results Phase - converts excess BG into degradation circles",
    "maxCircles": 5,
    "thresholdPerCircle": 100,
    "distributionOrder": ["liver", "pancreas"],
    "explanation": "Each 100 excess BG activates 1 circle. Circles are distributed alternately: 1st->liver, 2nd->pancreas, 3rd->liver, etc. Each circle adds +1 tier to the organ."
  }
}
